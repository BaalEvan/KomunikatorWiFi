<Page
    x:Class="App1.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Page.Resources>
		<DataTemplate x:Key="Message">
			<Grid Width="160" Height="80" HorizontalAlignment="Right" >
				<TextBlock TextWrapping="Wrap" Text="{Binding message}" Margin="0,0,0,10" Foreground="White" HorizontalAlignment="Left"/>
				<Rectangle HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="160" Margin="0,0,0,10" Fill="{ThemeResource PhoneAccentBrush}" Stroke="{ThemeResource PhoneAccentBrush}"/>
			</Grid>
		</DataTemplate>
	</Page.Resources>
	<Page.BottomAppBar>
		<CommandBar>
			<AppBarButton Icon="Send" Label="Send"/>
		</CommandBar>
	</Page.BottomAppBar>

    <Grid>
    	<TextBox Margin="0,450,0,0" TextWrapping="Wrap" VerticalAlignment="Bottom" PlaceholderText="Type your message here"/>
    	<ListView x:Name="Lista" Margin="0,0,0,50" ItemTemplate="{StaticResource Message}"/>
    </Grid>
</Page>
